<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.p4v4n.stickerapp">

    <application
        android:name="com.p4v4n.stickerapp.StickerApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">



        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>


        <activity android:name="com.p4v4n.stickerapp.SplashScreen"
            android:theme="@style/SplashScreen">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity android:name="com.p4v4n.stickerapp.EntryActivity"
            android:theme="@style/AppTheme"></activity>



        <activity android:name="com.p4v4n.stickerapp.StickerPackListActivity" />
        <activity
            android:name="com.p4v4n.stickerapp.StickerPackDetailsActivity"
            android:parentActivityName="com.p4v4n.stickerapp.StickerPackListActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.p4v4n.stickerapp.StickerPackListActivity" />
        </activity>
        <activity
            android:name="com.p4v4n.stickerapp.StickerPackInfoActivity"
            android:label="@string/title_activity_sticker_pack_info"
            android:parentActivityName="com.p4v4n.stickerapp.StickerPackDetailsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.p4v4n.stickerapp.StickerPackDetailsActivity" />
        </activity>

        <provider
            android:name="com.p4v4n.stickerapp.StickerContentProvider"
            android:authorities="${contentProviderAuthority}"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.whatsapp.sticker.READ" />









    </application>
</manifest>
